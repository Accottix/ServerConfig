changenumber:/changenumber $facingDir $numDir $numPos $machineID = >>>

    @facingDir = $facingDir
    @numDir = $numDir
    @numPos = $numPos
    @machineID = $machineID
    @ptrStart = get_command_block()
    @ptr[1] = @ptrStart
    @ptr[2] = @ptrStart
    @ptr[3] = @ptrStart
    @skullDir = ''


    # get number block location
    if(@facingDir == 'north'){
        @skullDir = '2'
        @blockPointer['z'] -= 2
        if(@numPos == '1'){
            @ptr[2]['x'] += 1    
            @ptr[3]['x'] += 2    
        }else if(@numPos == '2'){
            @ptr[1]['x'] += 1
            @ptr[3]['x'] -= 1
        }else if(@numPos == '3'){
            @ptr[2]['x'] -= 1
            @ptr[1]['x'] -= 2
        }
    }else if(@facingDir == 'east'){
        @skullDir = '5'
        @blockPointer['x'] += 2
        if(@numPos == '1'){
            @ptr[2]['z'] += 1    
            @ptr[3]['z'] += 2    
        }else if(@numPos == '2'){
            @ptr[1]['z'] += 1
            @ptr[3]['z'] -= 1
        }else if(@numPos == '3'){
            @ptr[2]['z'] -= 1
            @ptr[1]['z'] -= 2
        }
    }else if(@facingDir == 'west'){
        @skullDir = '4'
        @bloclPointer['x'] -= 2
        if(@numPos == '1'){
            @ptr[2]['z'] -= 1    
            @ptr[3]['z'] -= 2    
        }else if(@numPos == '2'){
            @ptr[1]['z'] -= 1
            @ptr[3]['z'] += 1
        }else if(@numPos == '3'){
            @ptr[2]['z'] += 1
            @ptr[1]['z'] += 2
        }
    }else if(@facingDir == 'south'){
        @skullDir = '3'
        @blockPointer['z'] += 2
        if(@numPos == '1'){
            @ptr[2]['x'] -= 1    
            @ptr[3]['x'] -= 2    
        }else if(@numPos == '2'){
            @ptr[1]['x'] -= 1
            @ptr[3]['x'] += 1
        }else if(@numPos == '3'){
            @ptr[2]['x'] += 1
            @ptr[1]['x'] += 2
        }
    }
    if(@numDir == 'up'){
        @blockPointer['y'] -= 1
    }else if(@numDir == 'down'){
        @blockPointer['y'] += 1
    }

    # at this point the blockPointer is pointing to the most significant digit

    @block[1] = get_value(@machineID.1)
    if(@number[1] == null){
        @number[1] = 0
    }
    store_value(@machineID.1,@number[1])
    @block[2] = get_value(@machineID.2)
    if(@number[2] == null){
        @number[2] = 0
    }
    store_value(@machineID.2,@number[2])
    @block[3] = get_value(@machineID.3)
    if(@number[3] == null){
        @number[3] = 0
    }
    store_value(@machineID.3,@number[3])
    
    include('/home/minecraft/server/plugins/CommandHelper/includes/getNumBlockMeta.ms')
    @number[1]['meta'] = _getNumBlockMeta(@number[1])
    @number[2]['meta'] = _getNumBlockMeta(@number[2])
    @number[3]['meta'] = _getNumBlockMeta(@number[3])
    
    for(@i = 1, @i <= 3, @i++){
        sudo('/minecraft:setblock '.@ptr[@i]['x'].' '.@ptr[@i]['y'].' '.@ptr[@i]['z'].' minecraft:skull '.@skullDir.' replace '.@number[@i]['meta'])
    }
